#!/usr/bin/make -f

%:
	dh $@ --with python3 --buildsystem=pybuild

override_dh_auto_clean:
	rm -rf build/
	rm -rf *.egg-info/
	find . -name '*.pyc' -delete
	find . -name '__pycache__' -delete

override_dh_auto_build:
	# Nothing to build, pure Python package

override_dh_auto_install:
	mkdir -p debian/monitor-tool/usr/share/monitor-tool
	mkdir -p debian/monitor-tool/usr/bin
	mkdir -p debian/monitor-tool/usr/share/applications
	mkdir -p debian/monitor-tool/usr/share/doc/monitor-tool
	
	# Copy source files
	cp -r src debian/monitor-tool/usr/share/monitor-tool/
	
	# Create launcher script
	echo '#!/bin/bash' > debian/monitor-tool/usr/bin/monitor-tool
	echo 'exec python3 /usr/share/monitor-tool/src/main.py "$$@"' >> debian/monitor-tool/usr/bin/monitor-tool
	chmod +x debian/monitor-tool/usr/bin/monitor-tool
	
	# Install desktop file
	install -m 644 debian/monitor-tool.desktop debian/monitor-tool/usr/share/applications/
	
	# Install documentation
	install -m 644 README.md debian/monitor-tool/usr/share/doc/monitor-tool/
